<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorgray"
        tools:context=".prays.todaylisting.PraysListingFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <CheckedTextView
                android:id="@+id/prays_listing_frg_fajr_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="false"
                android:text="@string/txt_fajr"
                style="@style/pray_text_style"/>


        <CheckedTextView
                android:id="@+id/prays_listing_frg_zohr_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="false"
                android:text="@string/txt_zohr"
                style="@style/pray_text_style"/>

        <CheckedTextView
                android:id="@+id/prays_listing_frg_asr_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="false"
                android:text="@string/txt_asr"
                style="@style/pray_text_style"/>

        <CheckedTextView
                android:id="@+id/prays_listing_frg_maghrib_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="false"
                android:text="@string/txt_maghrib"
                style="@style/pray_text_style"/>

        <CheckedTextView
                android:id="@+id/prays_listing_frg_isha_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="false"
                android:text="@string/txt_isha"
                style="@style/pray_text_style"/>

    </LinearLayout>


</ScrollView>